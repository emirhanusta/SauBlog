@{
    ViewData["Title"] = "Add";
    Layout = "_UserLayout";
}

@model Entities.DTOs.Blog.BlogForCreateDto

<div class="row my-5">
    <div class="offset-2 col-8">
        <div class="ibox ">
            <div class="ibox-content">
                <form asp-controller="Blogs" asp-action="Add" asp-area="User" enctype="multipart/form-data">
                    <h2>Blog Ekle</h2>
                    <input hidden="true" asp-for="WriterId" type="password" class="form-control" value="@ViewBag.writerId">

                    <div class="form-group row">
                        <label asp-for="Title" class="col-lg-2 col-form-label">Başlık</label>
                        <div class="col-lg-10">
                            <input type="text" asp-for="Title" class="form-control">
                            <span asp-validation-for="Title" class="form-text m-b-none text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Content" class="col-lg-2 col-form-label">İçerik</label>
                        <div class="col-lg-10">
                            <input type="text" asp-for="Content" class="form-control">
                            <span asp-validation-for="Content" class="form-text m-b-none text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Image" class="col-lg-2 col-form-label">Kapak Resmi</label>

                        <div class="col-lg-10">
                            <div class="custom-file">

                                <input asp-for="Image" type="file" class="custom-file-input">
                                <label asp-for="Image" class="custom-file-label">Choose file...</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CategoryIds" class="col-lg-2 col-form-label">Kategori</label>

                        <div class="col-lg-10">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        Kategori Seç
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#categoryAccordion">
                                    <div class="accordion-body">
                                        <div class="row">
                                            @foreach (var category in ViewBag.categories)
                                            {
                                                <div class="col-4">
                                                    <input name="CategoryIds" type="checkbox" id="option-@category.Id" value="@category.Id">
                                                    <label id="option-@category.Id">@category.Name</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="CategoryIds" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-sm btn-success" type="submit">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


