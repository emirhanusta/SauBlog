
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

@model Entities.DTOs.Category.CategoryForCreateDto
<div class="row my-5">

    <div class="offset-3 col-6">
        <h3>Kategori Bilgilerini Düzenle</h3>

        <form asp-controller="Categories" asp-action="Add" asp-area="User" >
            <div class="mb-3 row">
                <label asp-for="Name" class="col-sm-2 col-form-label"> Name </label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <input type="submit" value="Ekle" class="btn btn-success"/>
            </div>
        </form>

    </div>


</div>

