@using X.PagedList
@using X.PagedList.Mvc.Core
@using Entities.DTOs.Blog
@model IPagedList<Entities.Concrete.Blog>

<div class="row">
    @if (Model.Count>0)
    {

        foreach (var item in Model)
        {
            <div class="col-lg-6">
                <img class="rounded-circle" style="width: 150px; height: 150px" alt="avatar1" src="~/Images/@item.ImagePath" />
                <h2 class="fw-normal">@item.Title </h2>
                <p>
                    <a class="btn btn-outline-secondary" asp-route-id="@item.Id" asp-action="Detail" asp-controller="Blogs">View details &raquo;</a>
                </p>
            </div>
        }
        @Html.PagedListPager((IPagedList)Model,null)

    }
    else
    {
        <div class="offset-3 col-lg-6">
            <h2 class="fw-normal">Üzgünüz.. </h2>
            <p>
                Blog bulunumadı
            </p>

        </div>
    }


</div>
