@model List<Entities.Concrete.Blog>
<div class="row">
    @if (Model!=null)
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                @*   <svg class="bd-placeholder-img rounded-circle" width="140" height="140" xmlns="NewImages/@item.CurrentNewImagePath" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#777" /><text x="50%" y="50%" fill="#777" dy=".3em">140x140</text></svg>*@
                <img class="rounded-circle" style="width: 150px; height: 150px" alt="avatar1" src="~/Images/@item.ImagePath"/>
                <h2 class="fw-normal">@item.Title </h2>
                <p>
                    @item.Content
                </p>
                <p><a class="btn btn-outline-secondary" asp-route-id="@item.Id" asp-action="Detail" asp-controller="Blogs">View details &raquo;</a></p>
            </div>

            <!-- /.col-lg-4 -->
        }
    }
    else
    {
        <div class="offset-3 col-lg-6">
            <h2 class="fw-normal">Üzgünüz.. </h2>
            <p>
                Blog bulunumadı
            </p>
           
        </div>
    }

   
</div>