@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
</style>
@using Microsoft.IdentityModel.Tokens
@model Core.Utilities.Results.IDataResult<Entities.Concrete.Writer>
<div class="container">
    <div class="main-body">
        @if (Model.Success)
        {
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>@Model.Data.NickName</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Ad</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.Data.User.FirstName @Model.Data.User.LastName
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        @Model.Data.User.Email
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a class="btn btn-danger " href="#">Yazarı Sil</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }

                    @if (!Model.Data.Blogs.IsNullOrEmpty())
                    {
                        <div class="row gutters-sm">
                            <div class="col-sm-12 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="d-flex align-items-center mb-3">Bloglar</h6>
                                        <table class="table  table-hover">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Başlık</th>
                                                    <th>Eklenme Tarihi</th>
                                                    <th>Güncellenme Tarihi</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Data.Blogs)
                                                {
                                                    <tr>
                                                        <td>@item.Id</td>
                                                        <td>@item.Title</td>
                                                        <td>@item.CreatedDate</td>
                                                        <td>@item.UpdatedDate</td>
                                                        <td><a asp-area="" asp-controller="Blogs" asp-action="Detail" asp-route-id="@item.Id">Bloga Git &raquo;</a></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <h3>Bu yazarın henüz bir blogu yok</h3>
                    }
                    @if (!Model.Data.Comments.IsNullOrEmpty())
                    {
                        <div class="row gutters-sm">
                            <div class="col-sm-12 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="d-flex align-items-center mb-3">Yorumlar</h6>
                                        <table class="table  table-hover">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Yorum</th>
                                                    <th>Yorum Tarihi</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.Data.Comments)
                                                {
                                                    <tr>
                                                        <td>@item.Id</td>
                                                        <td>@item.Content</td>
                                                        <td>@item.CreatedDate</td>
                                                        <td><a asp-area="" asp-controller="Blogs" asp-action="Detail" asp-route-id="@item.BlogId">Bloga Git &raquo;</a></td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <h3>Bu yazarın henüz bir yorumu yok</h3>
                    }
                </div>

            </div>
        }
        else
        {
            <h3>@Model.Message</h3>
        }
    </div>
</div>